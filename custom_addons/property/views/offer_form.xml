<odoo>
    <data>
        <record id="offer_form" model="ir.ui.view">
            <field name="name">offer.form</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <form string="nueva oferta">
                    <sheet>
                        <group >
                            <field name="price" />
                            <button name="accept_offer" string="accept" type="object" icon="fa-check"/>
                            <button name="refuse" string="refuse" type="object" icon="fa-check" attrs="{'invisible': [('state','=','A')]}"/>
                            <field name="partner_id" widget="many2one"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="offer_action_tree" model="ir.actions.act_window" >
            <field name="name">Ofertas</field>
            <field name="res_model">property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>

    </data>
</odoo>
