<odoo>
    <data>
        <record id="offer_tree" model="ir.ui.view">
                <field name="name">offer.tree</field>
                <field name="model">property.offer</field>
                <field name="arch" type="xml">
                    <tree string="Ofertas" decoration-success="state == 'Accepted'" decoration-danger="state == 'Refused'">
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="is_accepted"/>
                        <field name="state" attrs="{'invisible':[('is_accepted', '=', True)]}"/>
                        <field name="property_type_id"/>
                    </tree>
                </field>
        </record>
        <record id="offer_form" model="ir.ui.view">
            <field name="name">offer.form</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <form string="nueva oferta">
                    <sheet>
                        <group >
                            <field name="price" />
                            <button name="accept_offer" string="accept" states="Accepted" type="object" icon="fa-check"/>
                            <button name="refuse" string="refuse" states="Refused" type="object" icon="fa-check" attrs="{'invisible': [('state', '=', 'A')]}"/>
                            <field name="partner_id" widget="many2one"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>
                            <field name="property_type_id" widget="Many2one"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="offer_action_tree" model="ir.actions.act_window" >
            <field name="name">Ofertas</field>
            <field name="res_model">property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>

    </data>
</odoo>
